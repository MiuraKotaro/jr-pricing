@startuml

package domain {
    package model {

        class 申し込みフォーム
        enum 駅
        package fare {
            class 料金
            class 運賃
            class 指定席ひかり料金
            class のぞみ割り増し料金
            class 割引率
        }
        class 利用日
        class 距離
        enum 人数
        class 片道往復
        enum 特急利用
    }

}

package application {
    package service {
        class 料金計算
    }
}

package api {
}

class 申し込みフォーム {
    - 申し込みフォームID
    - 乗車駅 : 駅
    - 降車駅 : 駅
    - 利用日 : LocalDate
    - 片道往復
    - 18才以上 : 人数
    - 18才未満 : 人数
    - 特急利用


}
enum 駅 <<区分オブジェクト>> {
    東京
    新大阪
    姫路
    --
    - 運賃
    - 指定席ひかり料金
    - 指定席のぞみ料金
    - 距離
}
enum 特急利用 {
    利用しない
    ひかり指定席
    のぞみ指定席
    自由席
}
class 料金 {
    - 円 : int

    + 足す(料金) : 料金
    + かける(人数) : 料金
    + 割引(割引率) : 料金
}
class 運賃 {
    - 料金

}
class 指定席ひかり料金 {
    - 料金

}
class のぞみ割り増し料金 {
    - 料金

}
class 割引率 {
    - パーセント : int

    + get百分率() : double
}
class 距離 {
    - キロメートル : int
}
class 人数 {
    - 人数 : int
}
class 片道往復 {
    is片道 : boolean
}
class 利用日 {
    LocalDate
}

class 料金計算 {
    --
    + 料金計算(降車駅, 利用日, 片道往復, 人数, 人数, 特急利用) : 料金
}

@enduml